{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "UniLivingContext": "Set in user secrets"
  },
  "AllowedHosts": "*",

  "Jwt": {
    "Key": "Set in user secrets",
    "Issuer": "https://localhost:7177",
    "Audience": "https://localhost:7177",
    "ExpireMinutes": 60,
    "RefreshTokenExpireDays": 7
  },

  "FileStorage": {
    "BaseDirectory": "uploads",
    "PropertiesDirectory": "uploads/properties",
    "MaxFileSizeMB": 10,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
  }
}